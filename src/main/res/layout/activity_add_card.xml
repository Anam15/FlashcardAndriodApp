<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCardActivity">

    <EditText
        android:id="@+id/editquestion"
        android:layout_width="300dp"
        android:layout_height="59dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="44dp"
        android:hint="Type your question here"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="41dp" />

    <EditText
        android:id="@+id/editanswer"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_below="@+id/editquestion"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Type your answer here"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="177dp" />

    <ImageView
        android:id="@+id/myBtn1"
        android:layout_width="100dp"
        android:layout_height="111dp"
        android:layout_below="@+id/editanswer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_arrow_downward_black_24dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="418dp" />

    <ImageView
        android:id="@+id/myBtn2"
        android:layout_width="122dp"
        android:layout_height="115dp"
        android:layout_below="@+id/editanswer"
        android:layout_alignRight="@+id/editanswer"
        android:layout_alignParentStart="true"
        android:layout_marginStart="254dp"
        android:layout_marginTop="211dp"
        android:layout_marginRight="-12dp"
        android:src="@drawable/ic_clear_black_24dp"
        tools:layout_editor_absoluteX="279dp"
        tools:layout_editor_absoluteY="418dp" />
</RelativeLayout>